@model CareerPilotAi.ViewModels.Authentication.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

@await Html.PartialAsync("Shared/_AuthStyles.cshtml")

<div>
    <div class="d-flex justify-content-center align-items-center">
        <div class="auth-card bg-white rounded py-5 px-4">
            <div class="text-center mb-4">
                <h4 class="auth-title">Reset Your Password</h4>
                <p class="text-muted">Enter your new password below</p>
            </div>

            <form asp-action="ResetPassword" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                
                <input asp-for="UserId" type="hidden" />
                <input asp-for="Code" type="hidden" />
                
                <div class="form-group mb-3">
                    <div class="password-field">
                        <input asp-for="Password" class="form-control auth-input" placeholder="New password" />
                        <button type="button" class="password-toggle">
                            <i class="fas fa-eye" id="passwordToggleIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <div class="password-field">
                        <input asp-for="ConfirmPassword" class="form-control auth-input" placeholder="Confirm new password" />
                        <button type="button" class="password-toggle">
                            <i class="fas fa-eye" id="confirmPasswordToggleIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary action-button w-100">Reset Password</button>
                </div>
                
                <div class="text-center">
                    <p class="text-muted small m-0">
                        Remember your password? <a asp-action="Login" class="link fw-medium">Back to Login</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @await Html.PartialAsync("../Auth/Shared/_AuthScripts.cshtml")
}
