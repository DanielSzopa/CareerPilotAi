@model CareerPilotAi.ViewModels.Authentication.ResendConfirmationViewModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
}

@await Html.PartialAsync("Shared/_AuthStyles.cshtml")

<div>
    <div class="d-flex justify-content-center align-items-center">
        <div class="auth-card bg-white rounded py-5 px-4">
            <div class="text-center mb-4">
                <h4 class="auth-title">Resend Email Confirmation</h4>
                <p class="text-muted">Enter your email address to resend the confirmation email</p>
            </div>

            <form asp-action="ResendConfirmation" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                
                <div class="form-group mb-3">
                    <input asp-for="Email" class="form-control auth-input" placeholder="Enter your email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary action-button w-100">Resend Confirmation Email</button>
                </div>
                
                <div class="text-center">
                    <a href="@Url.Action("Login", "Auth")" class="link">
                        Back to Login
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
