@model CareerPilotAi.ViewModels.Authentication.ResendConfirmationViewModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
}

<link rel="stylesheet" href="~/css/auth.css" />

<div>
    <div class="d-flex justify-content-center align-items-center">
        <div class="auth-card bg-white rounded py-5 px-4">
            <div class="text-center mb-4">
                <h4 class="auth-title">Resend Email Confirmation</h4>
                <p class="text-muted">Enter your email address to resend the confirmation email</p>
            </div>

            <form asp-action="ResendConfirmation" method="post" data-test-id="resend-confirmation-form">
                <div asp-validation-summary="All" class="text-danger mb-3" data-test-id="validation-summary"></div>
                
                <div class="form-group mb-3">
                    <input asp-for="Email" class="form-control auth-input" placeholder="Enter your email address" data-test-id="email-input" />
                    <span asp-validation-for="Email" class="text-danger" data-test-id="email-validation"></span>
                </div>
                
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary action-button w-100" data-test-id="resend-confirmation-button">Resend Confirmation Email</button>
                </div>
                
                <div class="text-center">
                    <a href="@Url.Action("Login", "Auth")" class="link" data-test-id="back-to-login-link">
                        Back to Login
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
