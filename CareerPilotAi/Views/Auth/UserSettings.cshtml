@model CareerPilotAi.ViewModels.Authentication.UserSettingsViewModel

@{
    ViewData["Title"] = "User Settings";
}

<link rel="stylesheet" href="~/css/auth.css" />

<h1 class="mb-4" data-test-id="user-settings-title">User Settings</h1>

@if (ViewData["SuccessMessage"] is string successMessage)
{
    <div class="alert alert-success" role="alert" data-test-id="success-message-banner">
        @successMessage
    </div>
}


<div class="row">
    <div class="col-md-6">
        <div asp-validation-summary="All" class="text-danger" data-test-id="validation-summary"></div>
        <form asp-action="UpdateUserSettings" asp-controller="Auth" method="post" data-test-id="user-settings-form">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" readonly data-test-id="email-input" />
            </div>
            <div class="mb-3">
                <label asp-for="TimeZoneId" class="form-label"></label>
                <select asp-for="TimeZoneId" asp-items="Model.TimeZones" class="form-select" data-test-id="timezone-select"></select>
                <span asp-validation-for="TimeZoneId" class="text-danger" data-test-id="timezone-validation"></span>
            </div>
            <button id="save-btn" type="submit" class="btn px-4 fw-semibold" data-test-id="save-button">Save</button>
        </form>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

