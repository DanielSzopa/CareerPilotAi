@{
    ViewData["Title"] = "Logout Confirmation";
}

<div class="login-container">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-12 col-sm-9 col-md-7 col-lg-5 col-xl-4">
                <div class="login-card">
                    <div class="text-center mb-4">
                        <i class="fas fa-sign-out-alt fa-3x text-success mb-4" style="color: #28a745;"></i>
                        <h4 class="login-title">You've been successfully logged out</h4>
                        <p class="login-subtitle">Your career data is safely stored and waiting for your return</p>
                    </div>

                    <div class="text-center mb-4">
                        <p class="confirmation-text">
                            Whether you're ready to create your next tailored resume, prepare for upcoming interviews, or track new applications, CareerPilotAI is here to supercharge your job search whenever you're ready.
                        </p>
                    </div>
                    
                    <div class="form-group mb-3">
                        <a href="@Url.Action("Login", "Auth")" class="btn btn-primary login-btn w-100">
                            <i class="fas fa-sign-in-alt me-2"></i>Log Back In
                        </a>
                    </div>
                    
                    <div class="form-group mb-3">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary w-100">
                            <i class="fas fa-home me-2"></i>Go to Homepage
                        </a>
                    </div>
                    
                    <div class="text-center mt-4">
                        <p class="help-text">
                            Ready to continue your career journey? 
                            <a href="/job-applications" class="resend-link">View your job applications</a> or 
                            <a href="/job-applications/entry-job-details" class="resend-link">start a new application</a>.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.login-container {
    margin-top: 50px;
}

.login-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    padding: 40px 30px;
    border: 1px solid #e9ecef;
}

.login-title {
    font-size: 24px;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 8px;
}

.login-subtitle {
    color: #6c757d;
    font-size: 16px;
    font-weight: 400;
    margin-bottom: 0;
    line-height: 1.5;
}

.confirmation-text {
    color: #495057;
    font-size: 15px;
    line-height: 1.6;
    margin-bottom: 0;
}

.help-text {
    color: #6c757d;
    font-size: 14px;
    line-height: 1.5;
    margin-bottom: 0;
}

.login-btn {
    background-color: #4a90e2;
    border: none;
    border-radius: 8px;
    padding: 12px 24px;
    font-weight: 500;
    font-size: 16px;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
}

.login-btn:hover {
    background-color: #357abd;
    transform: translateY(-1px);
}

.btn-outline-primary {
    border: 2px solid #4a90e2;
    color: #4a90e2;
    background-color: transparent;
    border-radius: 8px;
    padding: 12px 24px;
    font-weight: 500;
    font-size: 16px;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
}

.btn-outline-primary:hover {
    background-color: #4a90e2;
    color: white;
    transform: translateY(-1px);
}

.resend-link {
    color: #4a90e2;
    text-decoration: none;
    font-weight: 500;
}

.resend-link:hover {
    color: #357abd;
    text-decoration: underline;
}

@@media (max-width: 576px) {
    .login-card {
        margin: 20px;
        padding: 30px 20px;
    }
    
    .login-title {
        font-size: 20px;
    }
    
    .confirmation-text {
        font-size: 14px;
    }
}
</style>
