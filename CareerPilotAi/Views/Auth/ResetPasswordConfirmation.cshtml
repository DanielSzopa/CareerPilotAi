@{
    ViewData["Title"] = "Password Reset Successful";
}

<link rel="stylesheet" href="~/css/auth.css" />

<div>
    <div class="d-flex justify-content-center align-items-center">
        <div class="auth-card bg-white rounded py-5 px-4">
            <div class="text-center mb-4">
                <i class="fas fa-check-circle fa-3x text-success mb-4"></i>
                <h4 class="auth-title">Password Reset Successful</h4>
                <p class="text-muted">Your password has been updated successfully</p>
            </div>

            <div class="text-center">
                <p class="text-muted small">
                    You can now log in with your new password.
                </p>
            </div>
            
            <div class="form-group">
                <a href="@Url.Action("Login", "Auth")" class="btn btn-primary action-button w-100">
                    Continue to Login
                </a>
            </div>
        </div>
    </div>
</div>
