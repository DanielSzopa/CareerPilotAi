@{
    ViewData["Title"] = "Registration Confirmation";
}

@await Html.PartialAsync("Shared/_AuthStyles.cshtml")

<div>
    <div class="d-flex justify-content-center align-items-center">
        <div class="auth-card bg-white rounded py-5 px-4">
            <div class="text-center">
                <i class="fas fa-envelope fa-3x mb-4" style="color: var(--main-blue);"></i>
                <h4 class="auth-title">Check Your Email</h4>
                <p class="text-muted">We've sent a confirmation link to complete your registration</p>
            </div>

            @if (!string.IsNullOrEmpty(ViewData["Message"]?.ToString()))
            {
                <div class="alert alert-info mb-4" role="alert">
                    @ViewData["Message"]
                </div>
            }

            <div class="text-center">
                <p>
                    Please check your email and click on the confirmation link to activate your account.
                </p>
                <p class="text-muted small">
                    Don't see the email? Check your spam folder or
                    <a href="@Url.Action("ResendConfirmation", "Auth")" class="link">resend confirmation email</a>.
                </p>
            </div>

            <div class="form-group">
                <a href="@Url.Action("Login", "Auth")" class="btn btn-primary action-button w-100">
                    Return to Login
                </a>
            </div>
        </div>
    </div>
</div>
