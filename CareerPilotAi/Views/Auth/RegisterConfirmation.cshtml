@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="login-container">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-12 col-sm-9 col-md-7 col-lg-5 col-xl-4">
                <div class="login-card">
                    <div class="text-center mb-4">
                        <i class="fas fa-envelope fa-3x text-primary mb-4" style="color: #4a90e2;"></i>
                        <h4 class="login-title">Check Your Email</h4>
                        <p class="login-subtitle">We've sent a confirmation link to complete your registration</p>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewData["Message"]?.ToString()))
                    {
                        <div class="alert alert-info mb-4" role="alert">
                            @ViewData["Message"]
                        </div>
                    }

                    <div class="text-center mb-4">
                        <p class="confirmation-text">
                            Please check your email and click on the confirmation link to activate your account.
                        </p>
                        <p class="help-text">
                            Don't see the email? Check your spam folder or 
                            <a href="@Url.Action("ResendConfirmation", "Auth")" class="resend-link">resend confirmation email</a>.
                        </p>
                    </div>
                    
                    <div class="form-group mb-3">
                        <a href="@Url.Action("Login", "Auth")" class="btn btn-primary login-btn w-100">
                            Return to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.login-container {
    margin-top: 50px;
}

.login-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    padding: 3rem 2rem;
    margin: 1rem;
}

.login-title {
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 0.5rem;
}

.login-subtitle {
    color: #7f8c8d;
    font-size: 0.9rem;
    margin-bottom: 0;
}

.confirmation-text {
    color: #2c3e50;
    font-size: 0.95rem;
    margin-bottom: 1rem;
}

.help-text {
    color: #7f8c8d;
    font-size: 0.9rem;
    margin-bottom: 0;
}

.resend-link {
    color: #4a90e2;
    text-decoration: none;
    font-weight: 500;
}

.resend-link:hover {
    color: #357abd;
    text-decoration: underline;
}

.login-btn {
    background: #4a90e2;
    border: none;
    padding: 12px;
    border-radius: 8px;
    font-weight: 500;
    font-size: 1rem;
    transition: all 0.3s ease;
}

.login-btn:hover {
    background: #357abd;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(74, 144, 226, 0.3);
}

@@media (max-width: 576px) {
    .login-card {
        padding: 2rem 1.5rem;
        margin: 0.5rem;
    }
    
    .login-title {
        font-size: 1.4rem;
    }
}
</style>
