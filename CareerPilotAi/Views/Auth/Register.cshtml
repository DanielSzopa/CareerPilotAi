@model CareerPilotAi.ViewModels.Authentication.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

@await Html.PartialAsync("Shared/_AuthStyles.cshtml")

<style>
    #log-in-text {
        color: #7f8c8d;
        font-size: 0.9rem;
    }
</style>

<div>
    <div class="d-flex justify-content-center align-items-center">
        <div class="auth-card bg-white rounded py-5 px-4">
            <div class="text-center mb-4">
                <h4 class="auth-title">Sign up</h4>
                <p class="text-muted">Join CareerPilotAi to pilot your career</p>
            </div>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <input asp-for="Email" class="form-control auth-input" placeholder="Email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <div class="password-field">
                        <input asp-for="Password" class="form-control auth-input" placeholder="Password" />
                        <button type="button" class="password-toggle">
                            <i class="fas fa-eye" id="passwordToggleIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <div class="password-field">
                        <input asp-for="ConfirmPassword" class="form-control auth-input" placeholder="Confirm password" />
                        <button type="button" class="password-toggle">
                            <i class="fas fa-eye" id="confirmPasswordToggleIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary action-button w-100">Continue</button>
                </div>

                <div class="text-center">
                    <p id="log-in-text" class="m-0">
                        Already have an account? <a asp-action="Login" class="link fw-medium">Log in</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @await Html.PartialAsync("../Auth/Shared/_AuthScripts.cshtml")
}