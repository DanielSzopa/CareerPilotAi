@model CareerPilotAi.ViewModels.Authentication.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

@await Html.PartialAsync("Shared/_AuthStyles.cshtml")

<style>
    #back-to-login-text {
        color: #7f8c8d;
        font-size: 0.9rem;
    }
</style>

<div>
    <div class="d-flex justify-content-center align-items-center">
        <div class="auth-card bg-white rounded py-5 px-4">
            <div class="text-center mb-4">
                <h4 class="auth-title">Reset Password</h4>
                <p class="text-muted">Enter your email address to receive reset instructions</p>
            </div>

            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                
                <div class="form-group mb-3">
                    <input asp-for="Email" class="form-control auth-input" placeholder="Email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary action-button w-100">Continue</button>
                </div>
                
                <div class="text-center">
                    <p id="back-to-login-text" class="m-0">
                        Remember your password? <a asp-action="Login" class="link fw-medium">Back to Login</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
