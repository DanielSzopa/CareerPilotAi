@model CareerPilotAi.Models.Authentication.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="login-container">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-12 col-sm-9 col-md-7 col-lg-5 col-xl-4">
                <div class="login-card">
                    <div class="text-center mb-4">
                        <h4 class="login-title">Reset Password</h4>
                        <p class="login-subtitle">Enter your email address to receive reset instructions</p>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="form-group mb-3">
                            <input asp-for="Email" class="form-control login-input" placeholder="Email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-primary login-btn w-100">Continue</button>
                        </div>
                        
                        <div class="text-center">
                            <p class="register-link">
                                Remember your password? <a asp-action="Login">Back to Login</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.login-container {
    margin-top: 50px;
}
.login-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    padding: 3rem 2rem;
    margin: 1rem;
}

.login-title {
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 0.5rem;
}

.login-subtitle {
    color: #7f8c8d;
    font-size: 0.9rem;
    margin-bottom: 0;
}

.login-input {
    padding: 12px 16px;
    border: 2px solid #e9ecef;
    border-radius: 8px;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    background-color: #f8f9fa;
}

.login-input:focus {
    border-color: #4a90e2;
    box-shadow: 0 0 0 0.2rem rgba(74, 144, 226, 0.15);
    background-color: white;
}

.login-btn {
    background: #4a90e2;
    border: none;
    padding: 12px;
    border-radius: 8px;
    font-weight: 500;
    font-size: 1rem;
    transition: all 0.3s ease;
}

.login-btn:hover {
    background: #357abd;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(74, 144, 226, 0.3);
}

.register-link {
    color: #7f8c8d;
    font-size: 0.9rem;
    margin-bottom: 0;
}

.register-link a {
    color: #4a90e2;
    text-decoration: none;
    font-weight: 500;
}

.register-link a:hover {
    color: #357abd;
    text-decoration: underline;
}

@@media (max-width: 576px) {
    .login-card {
        padding: 2rem 1.5rem;
        margin: 0.5rem;
    }
    
    .login-title {
        font-size: 1.4rem;
    }
}
</style>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
