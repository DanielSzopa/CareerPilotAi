@model CareerPilotAi.Models.Authentication.LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

@await Html.PartialAsync("Shared/_AuthStyles.cshtml")

<style>
#sign-up-text{
    color: #7f8c8d;
    font-size: 0.9rem;
}
#forgot-password-link{
    font-size: 0.9rem;
}
</style>

<div>
    <div class="d-flex justify-content-center align-items-center">
            <div class="auth-card bg-white rounded py-5 px-4">
                <div class="text-center mb-4">
                    <h4 class="auth-title">Welcome</h4>
                    <p class="login-subtitle text-muted">Log in to CareerPilotAi to pilot your career</p>
                </div>

                <form asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    
                    @if (!string.IsNullOrEmpty(Model?.Message))
                    {
                        <div class="alert alert-info" role="alert">
                            @Model.Message
                        </div>
                    }
                    
                    <div class="form-group mb-3">
                        <input asp-for="Email" class="form-control auth-input" placeholder="Email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <div class="password-field">
                            <input asp-for="Password" class="form-control auth-input" placeholder="Password" />
                            <button type="button" class="password-toggle" onclick="togglePassword()">
                                <i class="fas fa-eye" id="passwordToggleIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3 text-end">
                        <a asp-action="ForgotPassword" id="forgot-password-link" class="link">Forgot password?</a>
                    </div>
                    
                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-primary action-button w-100">Continue</button>
                    </div>
                    
                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label small">Remember me</label>
                    </div>
                    
                    <div class="text-center">
                        <p id="sign-up-text" class="m-0">
                            Don't have an account? <a asp-action="Register" class="link fw-medium">Sign up</a>
                        </p>
                    </div>
                </form>
            </div>
    </div>
</div>

<script>
function togglePassword() {
    const passwordInput = document.getElementById('@Html.IdFor(m => m.Password)');
    const toggleIcon = document.getElementById('passwordToggleIcon');
    
    if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        toggleIcon.classList.remove('fa-eye');
        toggleIcon.classList.add('fa-eye-slash');
    } else {
        passwordInput.type = 'password';
        toggleIcon.classList.remove('fa-eye-slash');
        toggleIcon.classList.add('fa-eye');
    }
}
</script>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}