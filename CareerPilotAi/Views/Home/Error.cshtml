@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="text-center">
            <div class="error-icon mb-4">
                <svg width="80" height="80" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-danger">
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                    <line x1="15" y1="9" x2="9" y2="15" stroke="currentColor" stroke-width="2"/>
                    <line x1="9" y1="9" x2="15" y2="15" stroke="currentColor" stroke-width="2"/>
                </svg>
            </div>
            
            <h1 class="display-4 text-danger">Oops!</h1>
            <h2 class="h4 mb-3">Something went wrong</h2>
            <p class="lead text-muted mb-4">
                We're sorry, but an unexpected error has occurred. Our team has been notified and is working to resolve the issue.
            </p>
            
            <div class="d-grid gap-2 d-md-block">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-house-door"></i> Return to Home
                </a>
                <button class="btn btn-outline-secondary btn-lg" onclick="history.back()">
                    <i class="bi bi-arrow-left"></i> Go Back
                </button>
            </div>
            
            @if (Model.ShowRequestId)
            {
                <div class="mt-4">
                    <div class="alert alert-light" role="alert">
                        <small class="text-muted">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code><br>
                            <em>Please include this ID when contacting support.</em>
                        </small>
                    </div>
                </div>
            }
            
            <div class="mt-4">
                <p class="text-muted small">
                    If this problem persists, please 
                    <a href="mailto:support@careerpilotai.com" class="text-decoration-none">contact our support team</a>.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .error-icon svg {
        filter: drop-shadow(0 4px 6px rgba(220, 53, 69, 0.1));
    }
    
    .btn {
        border-radius: 8px;
        font-weight: 500;
    }
    
    .alert-light {
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 8px;
    }
    
    code {
        background-color: #f1f3f4;
        padding: 2px 6px;
        border-radius: 4px;
        font-family: 'Courier New', monospace;
    }
</style> 