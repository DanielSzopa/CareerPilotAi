            <div class="mb-4">
                <label class="form-label fw-semibold">Status</label>
                @foreach (var status in ApplicationStatus.ValidStatuses)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="statuses" value="@status" 
                               id="status-mobile-@status.Replace(" ", "-")"
                               @(Model.Filters.Statuses?.Contains(status) == true ? "checked" : "")>
