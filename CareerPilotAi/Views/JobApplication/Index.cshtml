@model CareerPilotAi.ViewModels.JobApplication.JobApplicationCardsViewModel
@using CareerPilotAi.Core

@{
    ViewData["Title"] = "Job Applications";
}

<!-- Anti-Forgery Token for AJAX requests -->
@Html.AntiForgeryToken()

@functions {
    string GetStatusClass(string status)
    {
        return status switch
        {
            "Draft" => "status-draft",
            "Rejected" => "status-rejected",
            "Submitted" => "status-submitted",
            "Interview Scheduled" => "status-interview-scheduled",
            "Waiting for offer" => "status-waiting-for-offer",
            "Received offer" => "status-received-offer",
            "No contact" => "status-no-contact",
            _ => "status-draft"
        };
    }
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Your Job Applications</h2>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Application
                </a>
            </div>
        </div>
            </div>


    <div class="row">
        <!-- Filters Sidebar (Desktop) -->
        <div class="col-lg-3 d-none d-lg-block">
            <div class="filters-sidebar">
                <h5 class="mb-3">Filters</h5>
                <form method="get" action="@Url.Action("Index")" id="filters-form">
                    <!-- Status Filter -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Status</label>
                        @foreach (var status in ApplicationStatus.ValidStatuses)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="statuses" value="@status" 
                                       id="status-@status.Replace(" ", "-")"
                                       @(Model.Filters.Statuses?.Contains(status) == true ? "checked" : "")>
                                <label class="form-check-label" for="status-@status.Replace(" ", "-")">
                                    @status
                                </label>
                        </div>
                        }
                    </div>

                    <!-- Salary Range Filter -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Salary Range (PLN)</label>
                        <div class="row g-2 mb-2">
                            <div class="col-6">
                                <input type="number" class="form-control form-control-sm" name="minSalary" 
                                       placeholder="Min" min="0" max="999999" value="@Model.Filters.MinSalary">
                            </div>
                            <div class="col-6">
                                <input type="number" class="form-control form-control-sm" name="maxSalary" 
                                       placeholder="Max" min="0" max="999999" value="@Model.Filters.MaxSalary">
                            </div>
                        </div>
                        <div class="mb-2">
                            <select class="form-select form-select-sm" name="salaryPeriod">
                                <option value="">Period</option>
                                @foreach (var period in SalaryPeriodType.ValidPeriods)
                                {
                                    <option value="@period" selected="@(Model.Filters.SalaryPeriod == period)">@period</option>
                                }
                            </select>
                    </div>
                        <div>
                            <select class="form-select form-select-sm" name="salaryType">
                                <option value="">Type (optional)</option>
                                @foreach (var type in SalaryType.ValidTypes)
                                {
                                    <option value="@type" selected="@(Model.Filters.SalaryType == type)">@type</option>
                                }
                            </select>
                        </div>
                    </div>

                    <!-- Location Filter -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Location</label>
                        <input type="text" class="form-control form-control-sm" name="location" 
                               placeholder="Enter location" maxlength="100" value="@Model.Filters.Location">
                    </div>

                    <!-- Work Mode Filter -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Work Mode</label>
                        @foreach (var mode in WorkMode.ValidModes)
                        {
                            var displayMode = mode == "OnSite" ? "On-site" : mode;
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="workModes" value="@mode" 
                                       id="workMode-@mode"
                                       @(Model.Filters.WorkModes?.Contains(mode) == true ? "checked" : "")>
                                <label class="form-check-label" for="workMode-@mode">
                                    @displayMode
                                </label>
                        </div>
                        }
                    </div>

                    <!-- Experience Level Filter -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Experience Level</label>
                        @foreach (var level in ExperienceLevel.ValidLevels)
                        {
                            var displayLevel = level == "NotSpecified" ? "Not specified" : level;
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="experienceLevels" value="@level" 
                                       id="experienceLevel-@level"
                                       @(Model.Filters.ExperienceLevels?.Contains(level) == true ? "checked" : "")>
                                <label class="form-check-label" for="experienceLevel-@level">
                                    @displayLevel
                                </label>
                            </div>
                        }
                        </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-sm">Apply Filters</button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">Clear All Filters</a>
                    </div>
                </form>
            </div>
                        </div>

        <!-- Main Content Area -->
        <div class="col-lg-9">
            <!-- Top Bar -->
            <div class="top-bar mb-4">
                <div class="row g-3 align-items-center">
                    <!-- Mobile Filter Toggle -->
                    <div class="col-12 d-lg-none">
                        <button class="btn btn-outline-primary w-100" type="button" data-bs-toggle="offcanvas" 
                                data-bs-target="#filtersOffcanvas" aria-controls="filtersOffcanvas">
                            <i class="fas fa-filter me-2"></i>Filters
                        </button>
                    </div>

                    <!-- Search Input -->
                    <div class="col-md-6">
                        <form method="get" action="@Url.Action("Index")" id="search-form" class="d-flex gap-2">
                            @if (Model.Filters.Statuses != null)
                            {
                                foreach (var status in Model.Filters.Statuses)
                                {
                                    <input type="hidden" name="statuses" value="@status" />
                                }
                            }
                            @if (Model.Filters.WorkModes != null)
                            {
                                foreach (var mode in Model.Filters.WorkModes)
                                {
                                    <input type="hidden" name="workModes" value="@mode" />
                                }
                            }
                            @if (Model.Filters.ExperienceLevels != null)
                            {
                                foreach (var level in Model.Filters.ExperienceLevels)
                                {
                                    <input type="hidden" name="experienceLevels" value="@level" />
                                }
                            }
                            <input type="hidden" name="minSalary" value="@Model.Filters.MinSalary" />
                            <input type="hidden" name="maxSalary" value="@Model.Filters.MaxSalary" />
                            <input type="hidden" name="salaryPeriod" value="@Model.Filters.SalaryPeriod" />
                            <input type="hidden" name="salaryType" value="@Model.Filters.SalaryType" />
                            <input type="hidden" name="location" value="@Model.Filters.Location" />
                            <input type="hidden" name="sortBy" value="@Model.Filters.SortBy" />
                            
                            <input type="text" class="form-control" name="searchTerm" 
                                   placeholder="Search by company or position..." maxlength="100"
                                   value="@Model.Filters.SearchTerm" id="search-input">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                        </div>

                    <!-- Sort Dropdown -->
                    <div class="col-md-4">
                        <form method="get" action="@Url.Action("Index")" id="sort-form">
                            @if (Model.Filters.Statuses != null)
                            {
                                foreach (var status in Model.Filters.Statuses)
                                {
                                    <input type="hidden" name="statuses" value="@status" />
                                }
                            }
                            @if (Model.Filters.WorkModes != null)
                            {
                                foreach (var mode in Model.Filters.WorkModes)
                                {
                                    <input type="hidden" name="workModes" value="@mode" />
                                }
                            }
                            @if (Model.Filters.ExperienceLevels != null)
                            {
                                foreach (var level in Model.Filters.ExperienceLevels)
                                {
                                    <input type="hidden" name="experienceLevels" value="@level" />
                                }
                            }
                            <input type="hidden" name="searchTerm" value="@Model.Filters.SearchTerm" />
                            <input type="hidden" name="minSalary" value="@Model.Filters.MinSalary" />
                            <input type="hidden" name="maxSalary" value="@Model.Filters.MaxSalary" />
                            <input type="hidden" name="salaryPeriod" value="@Model.Filters.SalaryPeriod" />
                            <input type="hidden" name="salaryType" value="@Model.Filters.SalaryType" />
                            <input type="hidden" name="location" value="@Model.Filters.Location" />
                            
                            <select class="form-select" name="sortBy" id="sort-select" onchange="this.form.submit()">
                                <option value="DateAddedDesc" selected="@(Model.Filters.SortBy != "DateAddedAsc")">
                                    Order by Latest
                                </option>
                                <option value="DateAddedAsc" selected="@(Model.Filters.SortBy == "DateAddedAsc")">
                                    Order by Oldest
                                </option>
                            </select>
                        </form>
                    </div>

                    <!-- Results Counter -->
                    <div class="col-md-2 text-md-end">
                        <small class="text-muted">Showing @Model.ResultCount applications</small>
                    </div>
                </div>
            </div>

            <!-- Job Applications Cards -->
            @if (Model.Cards != null && Model.Cards.Any())
            {
                <div class="row g-3" id="cards-container">
                    @foreach (var card in Model.Cards)
                    {
                        <div class="col-12" data-card-id="@card.JobApplicationId">
                            <div class="card h-100 job-application-card">
                                <div class="card-body d-flex flex-column position-relative">
                                    <!-- Status Dropdown + Kebab Menu in top-right corner -->
                                    <div class="position-absolute top-0 end-0 m-2 d-flex gap-1 align-items-center">
                                        <!-- Status Dropdown -->
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle d-flex align-items-center gap-1 px-2 py-1" 
                                                    type="button" 
                                                    id="statusDropdown-@card.JobApplicationId" 
                                                    data-bs-toggle="dropdown" 
                                                    aria-expanded="false"
                                                    style="font-size: 0.75rem;">
                                                <span class="status-dot @GetStatusClass(card.Status)"></span>
                                                <span>@card.Status</span>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="statusDropdown-@card.JobApplicationId">
                                                @foreach (var status in ApplicationStatus.ValidStatuses)
                                                {
                                                    <li>
                                                        <a class="dropdown-item d-flex align-items-center gap-2 @(status == card.Status ? "active" : "")" 
                                                           href="#" 
                                                           onclick="updateApplicationStatus('@card.JobApplicationId', '@status'); return false;">
                                                            <span class="status-dot @GetStatusClass(status)"></span>
                                                            @status
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>

                                        <!-- Kebab Menu -->
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary px-2 py-1" 
                                                    type="button" 
                                                    id="kebabMenu-@card.JobApplicationId" 
                                                    data-bs-toggle="dropdown" 
                                                    aria-expanded="false">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="kebabMenu-@card.JobApplicationId">
                                                <li>
                                                    <a class="dropdown-item" id="editJobApplicationBtn" href="#">
                                                        <i class="fas fa-edit me-2"></i>Edit
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a class="dropdown-item text-danger" href="#" 
                                                       onclick="deleteJobApplication('@card.JobApplicationId', '@card.Title'); return false;">
                                                        <i class="fas fa-trash me-2"></i>Delete
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>

                                    <!-- Company & Title -->
                                    <h5 class="card-title mb-1">@card.Title</h5>
                                    <h6 class="card-subtitle mb-3 text-muted">@card.Company</h6>

                                    <!-- Top 3 Skills -->
                                    @if (card.SkillsTop != null && card.SkillsTop.Any())
                                    {
                                        <div class="mb-3">
                                            @foreach (var skill in card.SkillsTop)
                                            {
                                                <span class="badge skill-color text-dark me-1 mb-1">@skill</span>
                                            }
                                            @if (card.SkillsCount > 3)
                                            {
                                                <span class="badge skill-color text-dark">+@(card.SkillsCount - 3) more</span>
                                            }
                                        </div>
                                    }

                                    <!-- Job Details -->
                                    <div class="mb-3 small text-muted">
                                        @if (!string.IsNullOrWhiteSpace(card.Location))
                                        {
                                            <div><i class="fas fa-map-marker-alt me-1"></i> @card.Location</div>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(card.WorkMode))
                                        {
                                            <div><i class="fas fa-laptop-house me-1"></i> @(card.WorkMode == "OnSite" ? "On-site" : card.WorkMode)</div>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(card.ContractType))
                                        {
                                            <div><i class="fas fa-file-contract me-1"></i> @card.ContractType</div>
                                        }
                                        @if (card.SalaryMin.HasValue || card.SalaryMax.HasValue)
                                        {
                                            <div>
                                                <i class="fas fa-money-bill-wave me-1"></i>
                                                @if (card.SalaryMin.HasValue && card.SalaryMax.HasValue)
                                                {
                                                    <text>@card.SalaryMin.Value.ToString("N0") - @card.SalaryMax.Value.ToString("N0") PLN</text>
                                                }
                                                else if (card.SalaryMin.HasValue)
                                                {
                                                    <text>From @card.SalaryMin.Value.ToString("N0") PLN</text>
                                                }
                                                else if (card.SalaryMax.HasValue)
                                                {
                                                    <text>Up to @card.SalaryMax.Value.ToString("N0") PLN</text>
                                                }
                                                @if (!string.IsNullOrWhiteSpace(card.SalaryType))
                                                {
                                                    <text>, @card.SalaryType</text>
                                                }
                                                @if (!string.IsNullOrWhiteSpace(card.SalaryPeriod))
                                                {
                                                    <text>, @card.SalaryPeriod</text>
                                                }
                                            </div>
                                        }
                                    </div>

                                    <!-- Created Date -->
                                    <div class="mt-auto">
                                        <small class="text-muted">
                                            Added: @card.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                                        </small>
                                    </div>

                                    <!-- Quick Actions -->
                                    <div class="mt-3">
                                        <a href="@Url.Action("JobApplicationDetails", new { jobApplicationId = card.JobApplicationId, returnUrl = Context.Request.Path + Context.Request.QueryString })" 
                                           class="btn btn-primary btn-sm w-100">Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else if (Model.Cards?.Count == 0)
            {
                <!-- Empty State - No Applications -->
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-briefcase fa-4x text-muted"></i>
                    </div>
                    <h4 class="text-muted mb-3">No Job Applications Yet</h4>
                    <p class="text-muted mb-4">Start tracking your job applications by adding your first one.</p>
                    <a href="@Url.Action("Create")" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Add Your First Application
                    </a>
                </div>
            }
            else
            {
                <!-- Empty State - No Results -->
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-search fa-4x text-muted"></i>
                    </div>
                    <h4 class="text-muted mb-3">No applications found matching your criteria</h4>
                    <p class="text-muted mb-4">Try adjusting your filters or search terms.</p>
                    <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                        Clear Filters
                    </a>
            </div>
            }
        </div>
    </div>
</div>

<!-- Off-canvas Filters (Mobile) -->
