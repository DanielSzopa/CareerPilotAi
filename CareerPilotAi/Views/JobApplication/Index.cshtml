                    </div>
                }
            </div>

            <!-- Salary Range Filter -->
            <div class="mb-4">
                <label class="form-label fw-semibold">Salary Range (PLN)</label>
                <div class="row g-2 mb-2">
                    <div class="col-6">
                        <input type="number" class="form-control form-control-sm" name="minSalary" 
                               placeholder="Min" min="0" max="999999" value="@Model.Filters.MinSalary">
                    </div>
                    <div class="col-6">
                        <input type="number" class="form-control form-control-sm" name="maxSalary" 
                               placeholder="Max" min="0" max="999999" value="@Model.Filters.MaxSalary">
                    </div>
                </div>
                <div class="mb-2">
                    <select class="form-select form-select-sm" name="salaryPeriod">
                        <option value="">Period</option>
                        @foreach (var period in SalaryPeriodType.ValidPeriods)
                        {
                            <option value="@period" selected="@(Model.Filters.SalaryPeriod == period)">@period</option>
                        }
                    </select>
                </div>
                <div>
                    <select class="form-select form-select-sm" name="salaryType">
                        <option value="">Type (optional)</option>
                        @foreach (var type in SalaryType.ValidTypes)
                        {
                            <option value="@type" selected="@(Model.Filters.SalaryType == type)">@type</option>
                        }
                    </select>
                </div>
            </div>

            <!-- Location Filter -->
            <div class="mb-4">
                <label class="form-label fw-semibold">Location</label>
                <input type="text" class="form-control form-control-sm" name="location" 
                       placeholder="Enter location" maxlength="100" value="@Model.Filters.Location">
            </div>

            <!-- Work Mode Filter -->
            <div class="mb-4">
                <label class="form-label fw-semibold">Work Mode</label>
                @foreach (var mode in WorkMode.ValidModes)
                {
                    var displayMode = mode == "OnSite" ? "On-site" : mode;
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="workModes" value="@mode" 
                               id="workMode-mobile-@mode"
                               @(Model.Filters.WorkModes?.Contains(mode) == true ? "checked" : "")>
                        <label class="form-check-label" for="workMode-mobile-@mode">
                            @displayMode
                        </label>
                    </div>
                }
            </div>

            <!-- Experience Level Filter -->
            <div class="mb-4">
                <label class="form-label fw-semibold">Experience Level</label>
                @foreach (var level in ExperienceLevel.ValidLevels)
                {
                    var displayLevel = level == "NotSpecified" ? "Not specified" : level;
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="experienceLevels" value="@level" 
                               id="experienceLevel-mobile-@level"
                               @(Model.Filters.ExperienceLevels?.Contains(level) == true ? "checked" : "")>
                        <label class="form-check-label" for="experienceLevel-mobile-@level">
                            @displayLevel
