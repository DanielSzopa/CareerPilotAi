@using CareerPilotAi.Models.JobApplication
@model JobOfferEntryDetailsViewModel

@{
    ViewData["Title"] = "Job Offer Details";
}

<h1>Enter Job Offer Details</h1>

<div class="row">
    <div class="col-md-8">
        <!-- Success Banner -->
        <div id="successBanner" class="alert alert-success alert-dismissible fade" role="alert" style="display: none;">
            <i class="fas fa-check-circle me-2"></i>
            <span id="successMessage">Job data successfully retrieved and added to the text area!</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <!-- Error Banner -->
        <div id="errorBanner" class="alert alert-danger alert-dismissible fade" role="alert" style="display: none;">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <span id="errorMessage">Unable to retrieve data from the provided URL. Please fill in the job description manually.</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <form asp-action="ProcessJobDetails" asp-controller="JobApplication" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="JobApplicationId" type="hidden" />
                  
            <div class="form-group mb-3">
                <label asp-for="Url" class="control-label">Job Posting URL</label>
                <div class="input-group">
                    <input asp-for="Url" class="form-control" placeholder="Enter the URL of the job posting" />
                    <button type="button" class="btn btn-outline-secondary" id="getDataFromUrlBtn">
                        <span id="btnText">Get Data from URL</span>
                        <span id="btnSpinner" class="spinner-border spinner-border-sm ms-2" style="display: none;" role="status" aria-hidden="true"></span>
                    </button>
                </div>
                <span asp-validation-for="Url" class="text-danger"></span>
                <small class="form-text text-muted">Enter the URL of the job posting to automatically extract the job description</small>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Text" class="control-label">Job Description Text</label>
                <textarea asp-for="Text" class="form-control" rows="10" id="jobDescriptionText" placeholder="Paste the job description text here, or use the URL above to extract it automatically"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
                <div class="mt-1">
                    <small class="text-muted">Word count: <span id="wordCount">0</span> / 10,000</small>
                </div>
                <div id="wordLimitError" class="text-danger mt-1" style="display: none;">
                    Text exceeds the maximum limit of 10,000 words. Please shorten your text to continue.
                </div>
                <small class="form-text text-muted">Job description text is required for processing your application</small>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="continueButton">Continue</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/word-counter.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize word counter
            const wordCounter = new WordCounter({
                textAreaSelector: '#jobDescriptionText',
                wordCountSelector: '#wordCount',
                maxWords: 10000,
                warningThreshold: 9000,
                submitButtonSelector: '#continueButton',
                errorMessageSelector: '#wordLimitError'
            });
            
            // Get Data from URL functionality
            $('#getDataFromUrlBtn').on('click', function() {
                const url = $('#Url').val();
                const jobApplicationId = $('#JobApplicationId').val() || '@Guid.Empty';
                
                if (!url || url.trim() === '') {
                    showErrorBanner('Please enter a valid URL first.');
                    return;
                }
                
                // Show loading state
                setLoadingState(true);
                hideBanners();
                
                // Make fetch request to the JobOfferData endpoint
                fetch(`/job-applications/url-details?jobApplicationId=${jobApplicationId}&url=${encodeURIComponent(url)}`)
                    .then(response => {
                        if (response.ok) {
                            return response.text();
                        } else {
                            throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                        }
                    })
                    .then(data => {
                        // Success: fill the text area and show success banner
                        $('#jobDescriptionText').val(data);
                        wordCounter.validateWordCount(); // Update word count using the counter instance
                        showSuccessBanner('Job data successfully retrieved and added to the text area!');
                    })
                    .catch(error => {
                        console.error('Error fetching job data:', error);
                        showErrorBanner('Unable to retrieve data from the provided URL. Please fill in the job description manually.');
                    })
                    .finally(() => {
                        setLoadingState(false);
                    });
            });
            
            function setLoadingState(isLoading) {
                const btn = $('#getDataFromUrlBtn');
                const btnText = $('#btnText');
                const btnSpinner = $('#btnSpinner');
                
                if (isLoading) {
                    btn.prop('disabled', true);
                    btnText.text('Loading...');
                    btnSpinner.show();
                } else {
                    btn.prop('disabled', false);
                    btnText.text('Get Data from URL');
                    btnSpinner.hide();
                }
            }
            
            function showSuccessBanner(message) {
                $('#successMessage').text(message);
                $('#successBanner').removeClass('show').addClass('show').show();
            }
            
            function showErrorBanner(message) {
                $('#errorMessage').text(message);
                $('#errorBanner').removeClass('show').addClass('show').show();
            }
            
            function hideBanners() {
                $('#successBanner').removeClass('show').hide();
                $('#errorBanner').removeClass('show').hide();
            }
            
            // Form submission validation
            $('form').on('submit', function(e) {
                // Perform one final validation before submission
                const validation = wordCounter.validateWordCount();
                
                // If validation fails, prevent form submission
                if (!validation.isValid) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}