@using CareerPilotAi.ViewModels.JobApplication
@model JobOfferEntryDetailsViewModel

@{
    ViewData["Title"] = "Job Offer Details";
}

<h1>Enter Job Offer Details</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="ProcessTheEntryJobApplication" asp-controller="JobApplication" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="JobApplicationId" type="hidden" />
            
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label">Job Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter the job title" />
                <div class="form-text text-muted">Job title is required</div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Company" class="control-label">Company Name</label>
                <input asp-for="Company" class="form-control" placeholder="Enter the company name" />
                <div class="form-text text-muted">Company name is required</div>
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="JobDescription" class="control-label">Job Description Text</label>
                <textarea asp-for="JobDescription" class="form-control" rows="15" id="jobDescriptionText" placeholder="Paste the job description text here"></textarea>
                
                <!-- AI Enhancement Button -->
                <div class="mt-2 mb-2">
                    <button type="button" class="btn btn-outline-secondary btn-sm" id="enhanceWithAiButton" title="Enhance the Job Description with AI">
                        <i class="fas fa-pencil-alt me-2"></i>
                        Enhance with AI
                    </button>
                </div>
                
                <div class="mt-1">
                    <div class="text-muted">Word count: <span id="wordCount">0</span> / 5,000</div>
                </div>
                <div id="wordLimitError" class="text-danger mt-1" style="display: none;">
                    Text exceeds the maximum limit of 5,000 words. Please shorten your text to continue.
                </div>
                <div class="form-text text-muted">Job description text is required for processing your application</div>
                <span asp-validation-for="JobDescription" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="continueButton">Continue</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/word-counter.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize word counter
            const wordCounter = new WordCounter({
                textAreaSelector: '#jobDescriptionText',
                wordCountSelector: '#wordCount',
                maxWords: 5000,
                warningThreshold: 4000,
                submitButtonSelector: '#continueButton',
                errorMessageSelector: '#wordLimitError'
            });
            
            // AI Enhancement functionality
            $('#enhanceWithAiButton').on('click', function(e) {
                e.preventDefault();
                
                const $button = $(this);
                const $textarea = $('#jobDescriptionText');
                const jobDescriptionText = $textarea.val().trim();
                
                // Remove any existing messages
                $('.ai-enhance-success, .ai-enhance-error').remove();
                
                if (!jobDescriptionText) {
                    showErrorMessage('Please enter job description text before enhancing.');
                    return;
                }
                
                // Show loading state
                showLoadingState($button);
                
                // Create AbortController for timeout
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), 40000); // 40 seconds
                
                // Make Fetch API request
                fetch('/job-applications/api/enhance-job-description', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({
                        JobDescriptionText: jobDescriptionText
                    }),
                    signal: controller.signal
                })
                .then(response => {
                    clearTimeout(timeoutId);
                    if (!response.ok) {
                        return response.json().then(errorData => {
                            // Handle ProblemDetails response format
                            const errorMessage = errorData.detail || errorData.error || 'Something went wrong. Please try again or provide different text content.';
                            throw new Error(errorMessage);
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.content) {
                        $textarea.val(data.content);
                        
                        // Trigger word counter update
                        $textarea.trigger('input');
                        
                        showSuccessMessage('Job description enhanced successfully!');
                    }
                })
                .catch(error => {
                    clearTimeout(timeoutId);
                    if (error.name === 'AbortError') {
                        showErrorMessage('Request timed out. Please try again with a shorter text or check your connection.');
                    } else {
                        showErrorMessage(error.message);
                    }
                })
                .finally(() => {
                    hideLoadingState($button);
                });
            });
            
            function showLoadingState($button) {
                $button.prop('disabled', true);
                $button.html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Processing...');
            }
            
            function hideLoadingState($button) {
                $button.prop('disabled', false);
                $button.html('<i class="fas fa-pencil-alt me-2"></i>Enhance with AI');
            }
            
            function showSuccessMessage(message) {
                const successHtml = `
                    <div class="alert alert-success alert-dismissible fade show ai-enhance-success mt-2" role="alert">
                        <i class="fas fa-check-circle me-2"></i>${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `;
                $('#enhanceWithAiButton').parent().after(successHtml);
            }
            
            function showErrorMessage(message) {
                const errorHtml = `
                    <div class="alert alert-danger alert-dismissible fade show ai-enhance-error mt-2" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `;
                $('#enhanceWithAiButton').parent().after(errorHtml);
            }
            
            // Form submission validation
            $('form').on('submit', function(e) {
                // Perform one final validation before submission
                const validation = wordCounter.validateWordCount();
                
                // If validation fails, prevent form submission
                if (!validation.isValid) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}